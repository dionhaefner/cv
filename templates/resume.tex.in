\usepackage{microtype}
\usepackage{fontspec}
\usepackage{csquotes}
\usepackage[utf8]{inputenc}
\usepackage[a4paper,hmargin={2.8cm, 1.5cm},vmargin={2.0cm, 1.5cm}]{geometry}
\usepackage{fontawesome5}
\usepackage{xcolor}
\usepackage{titlesec}
\usepackage{scrextend}
\usepackage{graphics}
